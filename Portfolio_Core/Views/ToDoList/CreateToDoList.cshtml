@model ToDoList
@{
    ViewData["Title"] = "CreateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">YAPILACAKLAR</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yeni Yapılacak İşlem Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<label>BAŞLIK & İÇERİK</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>TARİH</label>
							<input type="date" asp-for="Date" class="form-control" />
							<br />
							<label>GÖRSEL YOLU</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							<button class="btn btn-primary">YAPILACAK İŞİ EKLE</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

